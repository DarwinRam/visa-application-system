<fieldset>
  <legend>Business Purpose</legend>
  <div class="form-row">
    <div class="form-group">
      <label for="businessPhone">Business Phone</label>
      <input
        id="businessPhone"
        name="businessPhone"
        value="<%= application.getForm().getSections().business.businessPhone %>"
        required
        <%= editable === false ? 'disabled' : '' %>
      />
    </div>
    <div class="form-group">
      <label for="businessCity">Business City</label>
      <input
        id="businessCity"
        name="businessCity"
        value="<%= application.getForm().getSections().business.businessCity %>"
        required
        <%= editable === false ? 'disabled' : '' %>
      />
    </div>
  </div>
  <div class="form-row">
    <div class="form-group">
      <label for="businessAddress">Business Address</label>
      <input
        id="businessAddress"
        name="businessAddress"
        value="<%= application.getForm().getSections().business.businessAddress %>"
        required
        <%= editable === false ? 'disabled' : '' %>
      />
    </div>
    <div class="form-group">
      <label for="businessPurpose">Purpose</label>
      <input
        id="businessPurpose"
        name="businessPurpose"
        value="<%= application.getForm().getSections().business.businessPurpose %>"
        required
        <%= editable === false ? 'disabled' : '' %>
      />
    </div>
  </div>
</fieldset>
