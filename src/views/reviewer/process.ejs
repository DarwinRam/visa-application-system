<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/meta') %>
    <link rel="stylesheet" href="/styles/form.css" />
    <link rel="stylesheet" href="/styles/visa-form.css" />
    <title>
      Process | Application <%= application.getApplicationNumber() %>
    </title>
  </head>
  <body>
    <div class="app">
      <%- include('../partials/header') %>
      <main>
        <h2>Process Application <%= application.getApplicationNumber() %></h2>
        <form class="visa-form">
          <%- include('../partials/form-sections/personal') %> 
          <%- include('../partials/form-sections/travel') %>
          <%- include('../partials/form-sections/work') %> 
          <% if (isB1) { %>
            <%- include('../partials/form-sections/business') %> 
          <% } %>
          <% if (isB2) { %>
            <%- include('../partials/form-sections/tourist') %> 
          <% } %>
          <% if (isF1) { %>
            <%- include('../partials/form-sections/student') %> 
          <% } %>
          <%- include('../partials/form-sections/security') %>
        </form>
      </main>
      <%- include('../partials/footer') %>
    </div>
  </body>
</html>
